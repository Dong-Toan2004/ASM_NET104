@model IEnumerable<App_Data_ClassLib.Models.SanPham>
@{
    ViewData["Title"] = "Trang Chủ";
    var loginData = TempData["Login"];
}
<div class="container">
    @* Header *@
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/Slideshow1.jpg" class="d-block w-100" alt="..." style="height: 439px;">
            </div>
            <div class="carousel-item">
                <img src="~/img/Slideshow3.jpeg" class="d-block w-100" alt="..." style="height: 439px;">
            </div>
            <div class="carousel-item">
                <img src="~/img/Slideshow2.jpg" class="d-block w-100" alt="..." style="height: 439px;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <br>
    <h2 class="d-flex justify-content-center"><img src="~/img/Baner1.jpg" /></h2>
    <br>

   <div class="container">
    <div class="row">
        @foreach (var sach in Model)
        {
            <div class="col-md-3">
                <div class="card mb-4 box-shadow">
                    <div class="img-container">
                        <img src="~/img/@sach.Anh" alt="Ảnh Sách" class="img-fluid">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@sach.Name</h5>
                        <p class="card-text text-danger">Giá: @sach.Price</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="@Url.Action("ThemSanPhamVaoGioHang", "Home", new { idSanPham = sach.IdSP })" class="btn btn-sm btn-outline-secondary">Thêm vào giỏ hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
    <br>
    @{
    var danhMucID = "d957381f-eb53-4820-b570-bc76266b0398"; // ID của danh mục sản phẩm bạn muốn hiển thị
}

<h2 class="d-flex justify-content-center"><img src="~/img/Baner2.jpg" /></h2>
<br>
<div class="container">
    <div class="row">
        @foreach (var sach in Model)
        {
            @if (sach.IdDMSP == Guid.Parse(danhMucID))
            {
                <div class="col-md-3">
                    <div class="card mb-4 box-shadow">
                        <div class="img-container">
                            <img src="~/img/@sach.Anh" alt="Ảnh Sách" class="img-fluid">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@sach.Name</h5>
                            <p class="card-text text-danger">Giá: @sach.Price</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="@Url.Action("ThemSanPhamVaoGioHang", "Home", new { idSanPham = sach.IdSP })" class="btn btn-sm btn-outline-secondary">Thêm vào giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .img-container {
    width: 100%;
    height: 400px; /* Chiều cao cố định của ảnh */
    overflow: hidden; /* Ảnh sẽ bị cắt nếu vượt quá kích thước container */
    }

    .img-container img {
        width: 100%;
        height: 100%; /* Đảm bảo ảnh chiếm toàn bộ không gian container */
        object-fit: cover; /* Ảnh sẽ bị kéo hoặc co lại để điền đầy container mà không bị biến dạng */
    }

</style>
