@model IEnumerable<App_Data_ClassLib.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Quản lý Sách</h1>

<p>
    <a class="button" asp-action="Create">Thêm Mới</a>
</p>

<table class="table">
    <thead class="table-header">
        <tr>
            <th>ID</th>
            <th>Tên Sách</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Trạng Thái</th>
            <th>Tác Giả</th>
            <th>Ảnh</th>
            <th>Danh Mục</th>
            <th>Chức năng</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.IdSP)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Price)</td>
            <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
            <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
            <td>@Html.DisplayFor(modelItem => item.TacGia)</td>
            <td><img src="~/img/@item.Anh" alt="Ảnh Sách" style="max-width: 100px; max-height: 100px;" /></td>
            <td>@Html.DisplayFor(modelItem => item.IdDMSP)</td>
            <td class="action-buttons">
                <a class="button" asp-action="Edit" asp-route-id="@item.IdSP">Sửa</a>
                <a class="button" asp-action="Details" asp-route-id="@item.IdSP">Details</a>
                <a class="button" asp-action="Delete" asp-route-id="@item.IdSP">Xóa</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<style>
    /* CSS Styles */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .table th, .table td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    .table th {
        background-color: #f2f2f2;
        color: #333;
        font-weight: bold;
        text-align: center;
    }

   /* .table tr:nth-child(even) {
        background-color: #f2f2f2; 
    }*/

    .table tr:hover {
        background-color: #CCFFFF;
    }

    .button {
        background-color: #00FA9A;
        border: none;
        color: white;
        padding: 10px 24px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }

    /* Đặt CSS tại đây */
    .action-buttons {
        
        align-items: center;
        justify-content: space-around;
    }
    .table-header tr th {
        background-color: #00BFFF; /* Màu xanh lớp biển nhạt */
        color: white; /* Màu chữ trắng */
    }
</style>